  body
    nav(class='navbar navbar-default navbar-static-top')
      .container
        .navbar-header
          button(class='navbar-toggle collapsed' type='button' data-toggle='collapse' data-target='#menu-collapse')
            span(class='sr-only') Activer la navigation
            span(class='icon-bar')
